<Page x:Class="NutritionV1.AddDishUpdate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:Nutrition="clr-namespace:NutritionV1"
    Title="CreateDish"  Loaded="Page_Loaded" Grid.IsSharedSizeScope="True" PreviewKeyDown="Page_PreviewKeyDown" Margin="20,10,20,20">

    <Page.Resources>
        <Storyboard x:Key="ExpandGrid">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="NutrientsGrid" Storyboard.TargetProperty="(FrameworkElement.Height)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.5000000" Value="500"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CollapseGrid">
            <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="NutrientsGrid" Storyboard.TargetProperty="(FrameworkElement.Height)">
                <SplineDoubleKeyFrame KeyTime="00:00:00" Value="500"/>
                <SplineDoubleKeyFrame KeyTime="00:00:00.5000000" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>        
        <DataTemplate x:Key="idTemplate">
            <Label Name="lblID" FontSize="11" FontWeight="Normal" Content="{Binding NutrientID}" />
        </DataTemplate>

         <DataTemplate x:Key="NutrientParamTemplate">
            <TextBlock Name="txtNParam" FontSize="11" FontWeight="Normal" Height="20" Width="Auto" Text="{Binding NutrientParam}"/>
        </DataTemplate>
        
        <DataTemplate x:Key="valueDisplayTemplate">
            <TextBlock Name="txtNValueDisplay" Height="20" Width="75" Text="{Binding NutrientValue}"/>
        </DataTemplate>
        
       <DataTemplate x:Key="unitTemplate">
            <TextBlock Text="{Binding NutrientUnit}" Height="20" />
        </DataTemplate>
        
        <DataTemplate x:Name="ParameterTemplate" x:Key="ParameterTemplate">
            <TextBlock x:Name="txtParameter" Text="{Binding Path=KeywordDescription}" Width = "135" Height="20"/>
        </DataTemplate>
        
        <DataTemplate x:Name="StatusDisplayTemplate" x:Key="StatusDisplayTemplate">
            <TextBlock x:Name="txtStatus" Text="{Binding PropertyStatusName}" Width = "110"  Height="20"/>
        </DataTemplate>

        <DataTemplate x:Key="NameTemplate">
            <TextBlock Name="txtIngredientName" Height="20" FontSize="12" FontWeight="Normal" Text="{Binding IngredientName}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </DataTemplate>
                
        <DataTemplate x:Key="QuantityTemplate">
            <TextBox Style="{DynamicResource TextStyle}"  Name="txtQuantity" Width="55"  Foreground="Black" FontSize="12" FontWeight="Normal" MaxLength="4" Text="{Binding Quantity}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" PreviewKeyDown="txtQuantity_PreviewKeyDown" GotFocus="txtQuantity_GotFocus" TextChanged="txtQuantity_TextChanged" IsReadOnly="{Binding Path=IsReadOnly}" TextAlignment="Right" Margin="-5,0"/>
        </DataTemplate>
        
        <DataTemplate x:Key="QuantityDisplayTemplate">
            <TextBox Style="{DynamicResource TextDisableStyle}"  Name="txtDisplayQuantity" Width="55" Foreground="Black" FontSize="12" FontWeight="Normal" Text="{Binding Quantity}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="txtQuantity_GotFocus" TextAlignment="Right" Margin="-5,0"/>
        </DataTemplate>

        <DataTemplate x:Name="UnitTemplate" x:Key="UnitTemplate">
            <ComboBox x:Name="cboUnit"  DisplayMemberPath="StandardUnitDisplay" SelectedValuePath="StandardUnitID" SelectedValue="{Binding StandardUnitID, Mode=TwoWay}" SelectedItem="{Binding StandardUnitDisplay}" Width = "100" ItemsSource="{Binding IngredientUnitList}" GotFocus="cboUnit_GotFocus" SelectionChanged="cboUnit_SelectionChanged" LostFocus="cboUnit_LostFocus" Margin="-5,0"/>
        </DataTemplate>
        
        <DataTemplate x:Name="UnitDisplayTemplate" x:Key="UnitDisplayTemplate">
            <TextBlock x:Name="txtUnit" Height="20" Text="{Binding StandardUnitDisplay}" Width = "80" Margin="-5,0" />
        </DataTemplate>

        <DataTemplate x:Name="GramWeightTemplate" x:Key="GramWeightTemplate">  
            <TextBox Style="{DynamicResource TextDisableStyle}"  Name="txtGramWeight" Width="80"  Foreground="Black" FontSize="12" FontWeight="Normal" Text="{Binding GramWeight}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="txtQuantity_GotFocus" TextAlignment="Right" Margin="-5,0"/>            
        </DataTemplate>

        <DataTemplate x:Name="GramWeightDisplayTemplate" x:Key="GramWeightDisplayTemplate">
            <TextBlock Name="txtGramWeightDisplay" Height="20" Width="78"  FontSize="12" FontWeight="Normal" Text="{Binding GramWeight}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Right"  Margin="-5,0"/>
        </DataTemplate>
        
        <DataTemplate x:Key="OrderTemplate">
            <TextBox Style="{DynamicResource TextStyle}"  Name="txtOrder" Width="40"  Foreground="Black" FontSize="12" FontWeight="Normal" MaxLength="3" Text="{Binding DisplayOrder}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="{Binding Path=IsReadOnly}" TextAlignment="Right" Margin="-5,0" PreviewKeyDown="txtOrder_PreviewKeyDown"  GotFocus="txtOrder_GotFocus" />
        </DataTemplate>

        <DataTemplate x:Key="OrderDisplayTemplate">
            <TextBlock Name="txtDisplayOrder" Height="20" Width="38"  FontSize="12" FontWeight="Normal" Text="{Binding DisplayOrder}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Right"  Margin="-5,0"/>
        </DataTemplate>

        <DataTemplate x:Key="SectionTemplate">
            <TextBox Style="{DynamicResource TextStyle}"  Name="txtSection" Width="0"  FontSize="12" FontWeight="Normal" MaxLength="50" Text="{Binding SectionName}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsReadOnly="{Binding Path=IsReadOnly}" TextAlignment="Left" Margin="-5,0"/>
        </DataTemplate>
        
        <DataTemplate x:Key="SectionDisplayTemplate">
            <TextBlock Name="txtSection" Height="20" Width="0"  FontSize="12" FontWeight="Normal" Text="{Binding SectionName}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextAlignment="Left" />
        </DataTemplate>

        <DataTemplate x:Key="DeleteTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Image Source="images\Error.png" ToolTip="Delete Ingredient"  x:Name="imgDelete" Width="15" Height="15" Cursor="Hand" MouseDown="imgDelete_MouseDown"  HorizontalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="DisplayTemplate">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <Image Source="images\Ingredient.png" x:Name="imgDisplay" Width="15" Height="15" HorizontalAlignment="Center" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
      
    <Grid Name="grdCreateDish" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0"  Grid.Row="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <!--<Image Name="imgIcon" Grid.Column="0"  Grid.Row="0" Source="images\Nutrient.png" VerticalAlignment="Center" HorizontalAlignment="Left"  Width="25" Height="25" Margin="5,0,0,0" />-->
            <Label Style="{DynamicResource LabelStyle}" FontSize="15" Grid.Column="0"  Grid.Row="0" x:Name="lblDishName"  HorizontalAlignment="Left" Margin="5,0,0,0"  VerticalAlignment="Stretch" MinWidth="150" HorizontalContentAlignment="Left" >
                <Label.Background>
                    <LinearGradientBrush EndPoint="0.8,0.5" StartPoint="0,0">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#FF952D2D" Offset="1"/>                    
                    </LinearGradientBrush>
                </Label.Background>
            </Label>
        </Grid>

        <TabControl x:Name="tbDish" Margin="0,0,0,0" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" SelectionChanged="tbDish_SelectionChanged">
            <TabItem Name="tbMainDetails" TabIndex="0" Header="About">
                <Grid x:Name="grdGeneral" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="230"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="310"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />                        
                    </Grid.ColumnDefinitions>
                    <Label Name="lblTitleENG" Style="{DynamicResource LabelStyle}" Margin="5,2,0,3" >Recipe Title (English)</Label>
                    <Image x:Name="imgStar1" Grid.Row="0" Grid.Column="1" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" Margin="280,0,0,0"/>
                    <Label Grid.Column="2" Grid.Row="0" Height="25" Name="btnEdit" Style="{DynamicResource AddLabel}" Width="100" MouseDown="btnEdit_MouseDown"  HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0,10,0,0">Edit</Label>
                    <TextBox HorizontalAlignment="Left" Grid.Column="1" Name="txtTitleENG" MaxLength="50" Height="25" VerticalAlignment="Stretch" Margin="0,0,0,0" Width="280" TabIndex="0" PreviewKeyDown="txtGeneral_PreviewKeyDown" TextChanged="txtTitleENG_TextChanged"></TextBox>
                    <Label HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" Name="lblTitleREG" Style="{DynamicResource LabelStyle}"  Width="135" Margin="5,5,0,0" Visibility="Hidden">(Regional)</Label>
                    <TextBox HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Height="25"  Name="txtTitleREG" FontSize="14" FontFamily="AnjaliOldLipi" MaxLength="50" VerticalAlignment="Stretch" Width="280"  TabIndex="1"  PreviewKeyDown="txtGeneral_PreviewKeyDown"  Visibility="Hidden"/>
                    <Label HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" Name="lblTitleDisplay" Style="{DynamicResource LabelStyle}" Width="135" Margin="5,5,0,0" >Reg. Name in English</Label>
                    <Image x:Name="imgStar2" Grid.Row="2" Grid.Column="1" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" Margin="280,0,0,0"/>
                    <!--<Label Grid.Row="2" Grid.Column="1" Style="{DynamicResource LabelStyle}" Name="lblStarDisplay" Width="20" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center">*</Label>-->
                    <TextBox HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Name="txtTitleDisplay" MaxLength="50" Height="25" VerticalAlignment="Stretch" Width="280" TabIndex="2" PreviewKeyDown="txtGeneral_PreviewKeyDown"></TextBox>
                    <Label HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Name="lblEthnic" Grid.Row="3" VerticalAlignment="Top" Margin="5,5,0,0">Ethnicity</Label>
                    <Image x:Name="imgStar3" Grid.Row="3" Grid.Column="1" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" Margin="280,0,0,0"/>
                    <ComboBox HorizontalAlignment="Left" Name="cboEthnic" Grid.Column="1" Grid.Row="3" Height="25" VerticalAlignment="Stretch" Width="280"  TabIndex="3"  PreviewKeyDown="txtGeneral_PreviewKeyDown"/>
                    <TextBox Style="{DynamicResource TextDisableStyle}" HorizontalAlignment="Left" Name="txtEthnic" Grid.Column="1" Grid.Row="3" Height="25" VerticalAlignment="Stretch" Width="280"  TabIndex="3"/>
                    <Label HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Name="lblFoodType" Grid.Row="4" VerticalAlignment="Stretch" Margin="5,5,0,0">Food Type</Label>
                    <Image x:Name="imgStar4" Grid.Row="4" Grid.Column="1" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" Margin="280,0,0,0"/>
                    <ComboBox HorizontalAlignment="Left" Name="cboFoodType" Grid.Column="1" Grid.Row="4" Height="25" VerticalAlignment="Stretch" Width="280"  TabIndex="4"  PreviewKeyDown="txtGeneral_PreviewKeyDown"/>
                    <TextBox Style="{DynamicResource TextDisableStyle}" HorizontalAlignment="Left" Name="txtFoodType" Grid.Column="1" Grid.Row="4" Height="25" VerticalAlignment="Stretch" Width="280"  TabIndex="4"/>
                    <Label HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Name="lblDishCategory" Grid.Row="5" VerticalAlignment="Stretch" Margin="5,5,0,0">Category</Label>
                    <Image x:Name="imgStar5" Grid.Row="5" Grid.Column="1" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" Margin="280,0,0,0"/>
                    <ComboBox HorizontalAlignment="Left" Name="cboDishCategory" Grid.Column="1" Grid.Row="5" Height="25" VerticalAlignment="Stretch" Width="280" TabIndex="5"  PreviewKeyDown="txtGeneral_PreviewKeyDown"/>
                    <TextBox Style="{DynamicResource TextDisableStyle}" HorizontalAlignment="Left" Name="txtDishCategory" Grid.Column="1" Grid.Row="5" Height="25" VerticalAlignment="Stretch" Width="280"  TabIndex="5"/>
                    <Label Grid.Column="3" Grid.Row="5" Height="25" Name="btnAddImage" Style="{DynamicResource AddLabel}" Width="120" MouseDown="btnAddImage_MouseDown"  HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="30,5,30,5" TabIndex="6">Add Image</Label>
                    <Nutrition:ImageDisplay Grid.Column="3" Grid.Row="0" Grid.RowSpan="5" x:Name="imgDisplay" Margin="5,5,5,5" VerticalAlignment="Top" HorizontalAlignment="Right"  Height="150" Width="170" />
                    <Label HorizontalAlignment="Left" Grid.Row="7" Name="lblRemarksREG" Style="{DynamicResource LabelStyle}"  VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Margin="5,5,0,0" Visibility="Collapsed" >Remarks (Regional)</Label>
                    <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Name="txtRemarksREG" Background="White" Focusable="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" FontSize="14" FontFamily="AnjaliOldLipi" HorizontalAlignment="Stretch"  VerticalContentAlignment="Stretch" Margin="0,2,5,2" GotFocus="txtGeneral_GotFocus" GotMouseCapture="txtGeneral_GotMouseCapture" Visibility="Collapsed" IsTabStop="False" />
                    <Label HorizontalAlignment="Left" Grid.Row="7" Name="lblRemarks" Style="{DynamicResource LabelStyle}"  VerticalAlignment="Top" Grid.ColumnSpan="2" Width="200" Margin="5,5,0,0">Remarks (English)</Label>
                    <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" Name="txtRemarks" FontSize="14" Background="White" Focusable="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"  VerticalContentAlignment="Stretch" Margin="0,2,5,2" TabIndex="8" GotFocus="txtGeneral_GotFocus" GotMouseCapture="txtGeneral_GotMouseCapture" PreviewKeyDown="txtRemarks_PreviewKeyDown"/>
                    <TextBlock Margin="10,10,0,0" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="3" Grid.RowSpan="2" Name="txtHelp" Style="{DynamicResource TextBlockStyle}" LineHeight="17" />
                    <Rectangle Margin="5,0,5,5" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" Name="recPeriod" RadiusX="7.5" RadiusY="7.5" Style="{DynamicResource RecStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden" />
                    <Grid Margin="7,2,7,7" Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Hidden" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="1" Grid.Column="0" Style="{DynamicResource LabelStyle}"  Name="lblPeriod" Margin="5,0,0,0">Period of Expiry</Label>
                        <Label Grid.Row="0" Grid.Column="1" Style="{DynamicResource LabelStyle}"  Name="lblShelf" >Shelf Life</Label>
                        <TextBox Grid.Row="1" Grid.Column="1"  Name="txtShelfLife" MaxLength="3" PreviewKeyDown="txtNumber_PreviewKeyDown" Margin="2,2,2,2" />
                        <Label Grid.Row="1" Grid.Column="2" Style="{DynamicResource LabelStyle}"  Name="lblDaysShelf" Width="75"  Margin="2,2,2,2" >Days</Label>

                        <Label Grid.Row="0" Grid.Column="3" Style="{DynamicResource LabelStyle}"  Name="lblRefrigerated" >Refrigerated Life</Label>
                        <TextBox Grid.Row="1" Grid.Column="3" Name="txtRefrigeratedLife" MaxLength="3" PreviewKeyDown="txtNumber_PreviewKeyDown" Margin="2,2,2,2" />
                        <Label Grid.Row="1" Grid.Column="4" Style="{DynamicResource LabelStyle}"  Name="lblDaysRefrigerated"  Margin="2,2,2,2" >Days</Label>

                        <Label Grid.Row="0" Grid.Column="5" Style="{DynamicResource LabelStyle}"  Name="lblFrozen" >Frozen Life</Label>
                        <TextBox Grid.Row="1" Grid.Column="5"  Name="txtFrozenLife" MaxLength="3" PreviewKeyDown="txtNumber_PreviewKeyDown" Margin="2,2,2,2" />
                        <Label Grid.Row="1" Grid.Column="6"  Style="{DynamicResource LabelStyle}"  Name="lblDaysFrozen"  Margin="2,2,2,2" >Days</Label>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem  Name="tbDishIngredients"  Header="Ingredients" TabIndex="9">
                <Grid x:Name="grdSectionOne" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="42"/>
                        <RowDefinition  Height="42"/>
                        <RowDefinition  Height="42"/>
                        <RowDefinition  Height="25"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>  

                    <Grid Grid.Row="0" Grid.Column="6" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,10" >
                        <Rectangle Margin="0" Name="recMain3" RadiusX="7.5" RadiusY="7.5" Style="{DynamicResource FlipPage}" />
                        <TextBlock Margin="10,10,10,80" HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtTotalWeight1" Style="{DynamicResource TextBlockStyle}" Text="Dish Weight" />
                        <TextBlock Margin="10,30,10,60" HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtTotalWeight2" Style="{DynamicResource TextBlockStyle}" Text="Ready to serve form" />
                        <TextBlock Margin="10,60,40,10" Width="55" Style="{DynamicResource ResultTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txtTotalWeightvalue" />
                        <TextBlock Margin="65,60,10,10" Width="30" Style="{DynamicResource ResultTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Top" Name="txtTotalWeightunit" Text="gm" />
                        <Path Data="M240,568C240,568 240,504 240,504 240,504 240,488 256,488 256,488 320,496 320,456 320,456 320,496 288,528 288,528 240,568 240,568z" Height="52" HorizontalAlignment="Right" Stretch="Fill" Stroke="{x:Null}" VerticalAlignment="Bottom" Width="43">
                            <Path.Fill>
                                <LinearGradientBrush EndPoint="0.575,0.643" StartPoint="0.07,0.25">
                                    <GradientStop Color="White" Offset="0" />
                                    <GradientStop Color="#FF02041E" Offset="1" />
                                    <GradientStop Color="#FF8A8B8F" Offset="0.756" />
                                    <GradientStop Color="#FFD0D0DE" Offset="0.431" />
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Grid>
                    
                    <GroupBox x:Name="gbPlan" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5,5,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition  Height="25"/>
                                <RowDefinition  Height="30"/>
                                <RowDefinition  Height="30"/>
                                <RowDefinition  Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="55"/>
                                <ColumnDefinition Width="105"/>
                                <ColumnDefinition Width="105"/>
                                <ColumnDefinition Width="50"/>                                
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Name="lblServingSize" VerticalAlignment="Bottom">Serving Size</Label>
                            <Label Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Left" Style="{DynamicResource LabelStyle}" Name="lblStandardWeight" VerticalAlignment="Stretch" >Standard Weight per Serving</Label>
                            
                            <Label  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Style="{DynamicResource LabelStyle}" Name="lblPlan1" VerticalAlignment="Center" Margin="5,0,0,0" >PLAN I </Label>
                            <TextBox HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" Name="txtServingSize" PreviewKeyDown="txtNumber_PreviewKeyDown" MaxLength="2" Height="25" VerticalAlignment="Center" Margin="0,0,5,0" Width="50" IsTabStop="False"/>
                            <ComboBox HorizontalAlignment="Left" Grid.Row="1" Grid.Column="2" Name="cboServeUnit" Height="25" Width="100" Margin="0,0,5,0" TabIndex="13"  PreviewKeyDown="txtGeneral_PreviewKeyDown" SelectionChanged="cboServeUnit_SelectionChanged"/>
                            <TextBox Grid.Row="1" Grid.Column="2" Style="{DynamicResource TextDisableStyle}"  HorizontalAlignment="Left" Name="txtServeUnit" Height="25" Width="100" Margin="0,0,5,0" Background="White" FontSize="11"  IsTabStop="False"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Name="txtStandardWeight" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="12" PreviewKeyDown="txtNumber_PreviewKeyDown" LostFocus="txtStandardWeight_LostFocus"  TextChanged="txtStandardWeight_TextChanged" MaxLength="3"/>
                            <TextBox Grid.Row="1" Grid.Column="3" Name="txtPreWeight" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Hidden" FontSize="11" IsTabStop="False"/>
                            <Label Grid.Row="1" Grid.Column="4" Style="{DynamicResource LabelStyle}" Name="lblWeightUnit" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >gm</Label>
                            <Image x:Name="imgStar6" Grid.Row="1" Grid.Column="4" Source="Images/Star.png" Stretch="Fill" Height="10" Width="10" HorizontalAlignment="Left" Margin="30,0,0,0"/>
                            <Label Grid.Row="1" Grid.Column="5" Style="{DynamicResource LabelStyle}" Name="lblUnitName1" Margin="2,2,2,2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Foreground="LightGoldenrodYellow"  FontWeight="Bold" >Medium</Label>

                            <Label HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0" Style="{DynamicResource LabelStyle}" Name="lblPlan2" VerticalAlignment="Center" Margin="5,0,0,0" >PLAN II </Label>
                            <TextBox HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Name="txtServingSize1" PreviewKeyDown="txtNumber_PreviewKeyDown" MaxLength="2" Height="25" VerticalAlignment="Center" Margin="0,0,5,0" Width="50" FontSize="11" IsTabStop="False"/>
                            <!--<ComboBox HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" Name="cboServeUnit1" Height="25" Width="100" Margin="0,0,5,0" TabIndex="15"  PreviewKeyDown="txtGeneral_PreviewKeyDown"/>-->
                            <TextBox Grid.Row="2" Grid.Column="2" Style="{DynamicResource TextDisableStyle}"  HorizontalAlignment="Left" Name="txtServeUnit1" Height="25" Width="100" Margin="0,0,5,0" Background="White" FontSize="11" IsTabStop="False"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Name="txtStandardWeight1" MaxLength="3" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" TabIndex="14" PreviewKeyDown="txtNumber_PreviewKeyDown" LostFocus="txtStandardWeight1_LostFocus" TextChanged="txtStandardWeight1_TextChanged"  />
                            <TextBox Grid.Row="2" Grid.Column="3" Name="txtPreWeight1" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Hidden" FontSize="11"  IsTabStop="False"/>
                            <Label Grid.Row="2" Grid.Column="4" Style="{DynamicResource LabelStyle}" Name="lblWeightUnit1" Margin="2,2,2,2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >gm</Label>
                            <Label Grid.Row="2" Grid.Column="5" Style="{DynamicResource LabelStyle}" Name="lblUnitName2" Margin="2,2,2,2" HorizontalAlignment="Left" VerticalAlignment="Stretch" Foreground="LightSkyBlue"  FontWeight="Bold">Large</Label>
                            
                            <Label HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" Style="{DynamicResource LabelStyle}" Name="lblPlan3" VerticalAlignment="Center" Margin="5,0,0,0" >PLAN III </Label>
                            <TextBox HorizontalAlignment="Left" Grid.Row="3" Grid.Column="1" Name="txtServingSize2" PreviewKeyDown="txtNumber_PreviewKeyDown" MaxLength="2" Height="25" VerticalAlignment="Center" Margin="0,0,5,0" Width="50" FontSize="11"  IsTabStop="False"/>
                            <!--<ComboBox HorizontalAlignment="Left" Grid.Row="3" Grid.Column="2" Name="cboServeUnit2" Height="25" Width="100" Margin="0,0,5,0" TabIndex="15"  PreviewKeyDown="txtGeneral_PreviewKeyDown"/>-->
                            <TextBox Grid.Row="3" Grid.Column="2"  Style="{DynamicResource TextDisableStyle}"  HorizontalAlignment="Left" Name="txtServeUnit2" Height="25" Width="100" Margin="0,0,5,0" Background="White" FontSize="11" IsTabStop="False"/>
