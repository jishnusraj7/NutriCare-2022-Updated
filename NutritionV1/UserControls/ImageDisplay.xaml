<UserControl x:Class="NutritionV1.ImageDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="170" Width="170">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="25"  /> 
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Name="RecImage" Grid.Column="0" Grid.Row="0" RadiusX="15.5" RadiusY="15.5"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,0" />
        <Image Name="Image" Margin="7,7,7,7" Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <TextBlock Foreground="White" FontSize="12" Grid.Column="0" Grid.Row="1" Name="Name" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <Label Grid.Column="0" Grid.Row="1" Name="ID" Style="{DynamicResource LabelStyle}" HorizontalAlignment="Center"  VerticalAlignment="Center" Visibility="Hidden"/>
    </Grid>
</UserControl>
