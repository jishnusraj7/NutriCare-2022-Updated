                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Transparent" Offset="0.129"/>
                            <GradientStop Color="Transparent" Offset="0.509"/>
