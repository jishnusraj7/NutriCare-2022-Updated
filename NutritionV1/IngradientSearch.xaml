                <Rectangle  Grid.Column="5" Grid.Row="1" Height="30" Width="35" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,25,0" x:Name="GridView" RadiusX="5" RadiusY="5"  Visibility="Hidden"/>
